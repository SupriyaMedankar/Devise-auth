<script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.2.0/zxcvbn.js"></script>
<% @page_title = "UserAuth | Signup" %>
<div class="content">
  <h1>Sign Up</h1>

  <%= form_for(:user, :url => {:controller => 'users', :action => 'create', :html => { :onsubmit => "validate()" }}) do |f| %>
    <p> Username:</br> <%= f.text_field :username%> </p>
    <p> Email:</br> <%= f.text_field :email%> </p>
     <p> Password:</br> <%= f.password_field :password, :id => 'password' %></p>
     <div style="display: none" id="div1">
      <meter id="meter1" min="0" max="100" low="25" high="75" optimum="100" value="0" ></meter>
      </br><span id="result"></span>
    </div>
     <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
    <%= f.submit :Signup %>
  <% end %>
  <% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>
